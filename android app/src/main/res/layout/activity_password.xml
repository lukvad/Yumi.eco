<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eco.yumi.Password">
        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:elevation="20dp"
            android:id="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:elevation="20dp"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow" />

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:elevation="20dp"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/id"
            app:srcCompat="@drawable/id" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:fontFamily="@font/comfortaa"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/passwordTitle"
            tools:textAlignment="center" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/comfortaa"

            android:hint="@string/oldPassword"
            android:inputType="textWebPassword"
            android:textColorHint="@color/DarkGrey" />

        <EditText
            android:id="@+id/password"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/oldPassword"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/comfortaa"

            android:hint="@string/newPassword"
            android:inputType="textWebPassword"
            android:textColorHint="@color/DarkGrey"
            />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"

            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:hint="@string/confrimPassword"
            android:inputType="textWebPassword"
            android:textColorHint="@color/DarkGrey" />


        <Button
            android:id="@+id/changePassword"
            android:layout_below="@+id/confirmPassword"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape_start"
            android:text="@string/changePassword2"
            android:textColor="@color/colorSecondary"
            android:fontFamily="@font/comfortaa"
            android:layout_width="wrap_content"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:layout_height="30dp"
            />
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>

