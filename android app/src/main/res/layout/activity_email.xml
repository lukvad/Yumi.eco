<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainblur"
    tools:context="eco.yumi.MainActivity"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/relative_background"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:padding="40dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/comfortaa"
            android:layout_alignParentTop="true"
            android:text="@string/titleEmail" />
        <EditText
            android:id="@+id/email"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@id/title"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>



        <Button
            android:id="@+id/changePassword"
            android:layout_below="@id/email"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape_start"
            android:text="@string/changePassword"
            android:textColor="@color/colorSecondary"
            android:fontFamily="@font/comfortaa"
            android:layout_width="wrap_content"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel"
            android:fontFamily="@font/comfortaa"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorSecondary"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/changePassword"/>


    </RelativeLayout>
</RelativeLayout>
