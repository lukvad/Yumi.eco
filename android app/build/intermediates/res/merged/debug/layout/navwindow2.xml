<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="top"
    android:elevation="20dp"
    android:alpha="1">

    <ImageView
        android:id="@+id/usergrey"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/usergrey"

        />

    <View android:background="@color/LightGrey"
        android:id="@+id/line"
        android:layout_width = "180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/usergrey"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:layout_height="1dp"/>
<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_marginBottom="20dp"
    android:textColor="@color/colorSecondary"
    android:layout_height="wrap_content"
    android:layout_below="@+id/line"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/comfortaa"
    android:text="@string/welcome5"
    android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/comfortaa"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="@string/welcome6"/>
    <Button
        android:id="@+id/login"
        android:layout_below="@id/textView6"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape_start"
        android:text="@string/tryme"
        android:textAllCaps="true"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/comfortaa"
        android:layout_width="150dp"
        android:layout_height="30dp"/>


</RelativeLayout>